/* pages/index/good/good.wxss */

#search {
  top: 0px;
  clear: both;
  border: 1px solid #bbbaba;
  border-radius: 20rpx;
  padding: 15rpx 15rpx 7rpx 20rpx;
  left: 20rpx;
  margin: 10rpx 20rpx;
}

#search input {
  display: inline-block;

}

#search button {
  float: right;
  color: white;
  background: #bbbaba;
}

#filter {
  margin: 30rpx;
  background: white;
  white-space: nowrap;
}
/*

*/
.type-item {
  background-color: #eee;
  border-radius: 15rpx;
  margin: 20rpx 28rpx;
  display: inline-block;
  padding: 8rpx 20rpx;
  color: #555;
}

.active {
  border: 1px solid orangered;
  color: orangered;
   background-color: white
}

#goodlist {
  clear: both;
  margin: 00rpx 10px;
  padding-bottom: 40rpx;
  font-size: 14px;
  border-top: 4rpx solid #eee;
}

.good-head {
  padding: 10rpx 0px;
  padding-left: 10rpx;
  font-size: 20px;
  padding-top: 70rpx;
}

.right {
  float: right;
}

.more {
  display: block;
  width: 100rpx;
  color: white;
  background: url(../../image/typemore.png) no-repeat 45rpx center;
}

.good-body {
  padding: 10rpx 0px;
}

.good-item {
  padding: 10rpx 10rpx;
  width: 335rpx;
  float: left;
  margin-top: 30rpx;
}

.good-pic image {
  width: 335rpx;
  height: 300rpx;
}

.good-title {
  padding: 10rpx 0px;
  font-size: 12px;
}

.good-price {
  color: orangered;
}
