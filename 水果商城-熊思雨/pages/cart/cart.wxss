/* pages/cart/cart.wxss */


#cartlist {
 
  border-top: 1px solid #ccc;
  font-size:35rpx;
  font-family: 'Times New Roman', Times, serif;
 
}

.list-item {
  height: 350rpx;
  padding: 5px 0px 0px 0px;
  background: white;
  border-bottom: 1px solid #ccc;
  clear: both;
  
}

.item-head {
  padding: 0rpx 20rpx;
  line-height: 70rpx;
 
}

.item-head .gray {
  color: gray;
  padding: 0rpx 20rpx;
  
}

.item-body {  width: 100%;
  height:300rpx;
  padding: 0rpx 0rpx;
  clear: both;
  margin: 0px;
 

}

.body-left {
  margin-top: 10rpx;
  width: 250rpx;
  height: 260rpx;
  
  display: inline-block;
  padding-left: 20rpx;
}

.body-left .ctr {
  position: relative;
  display: inline;
  left: 10rpx;
}

.body-right {
  padding-left: 5rpx;
  padding-right: 15rpx;
  width: 450rpx;
  clear: both;
  display: inline-block;
  color: #777;
}

.right-head {
  padding: 10rpx 0rpx;
  font-size:30rpx;
  line-height: 45rpx;
  margin-bottom: 70rpx; 
 
}

.right-middle {
  padding: 10rpx 0rpx;
  font-size: 32rpx;

}

.right-foot {width: 460rpx;
  height: 40rpx;
  padding: 20rpx 0rpx; 
  font-size: 16px;

 
}

.red {
  color: orangered;
  padding-right: 19rpx;

  
}

.middleline {
  text-decoration: line-through;
}

.right {
  float: right;
  font-size: 32rpx;
}

.body-hidden {
  width: 450rpx;
  clear: both;
  display: inline-block;
  color: #777;
}

.hidden-right {
  display: inline-block;
  width: 50rpx;
  height: 150rpx;
  padding: 75rpx 25rpx 7px 35rpx;
  background: orangered;
  color: white;
  position: relative;
  top: -80rpx;
  right: -15px;
}

.hidden-left {
  display: inline-block;
  width: 340rpx;

}

.hidden-top {
  padding: 40rpx 0rpx;
  height: 90rpx;
  line-height: 50rpx;
  text-align: center;
  vertical-align: middle;
  
}

.hidden-top .jian, .hidden-top .jia {
  padding: 0px 60rpx;
  
}

